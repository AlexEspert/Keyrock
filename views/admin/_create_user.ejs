<div id="create_user_modal" class="modal fade" style="top: 0px;" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">Ã—</a>
                <h3>Create user</h3>
            </div>
            <form id="create_user_form" ng-controller="DummyCtrl" name="" autocomplete="" class="" action="/idm/admins/list_users/users" method="POST" enctype="">
                <input type='hidden' name='_csrf' value='<%= csrfToken%>' />
                <div class="modal-body clearfix">
                    <div class="left">
                        <fieldset>
                            <input id="id_userID" name="userID" type="hidden" value="">
                            <span id="passwordDifferent" class="help-block alert alert-danger" style="display: none;">The two password fields didn't match</span>
                            <span id="emailUsed" class="help-block alert alert-danger" style="display: none;">Email is already used</span>
                            <span id="emailInvalid" class="help-block alert alert-danger" style="display: none;">Email is invalid</span>
                            <div class="form-group required">
                                <label class="control-label  required" for="id_username">Username</label>
                                <div class="">
                                    <input class="form-control" id="id_username" maxlength="64" name="username" type="text" value="">
                                </div>
                            </div>
                            <span id="username" style="display: none;" class="help-block alert alert-danger ">Este campo es obligatorio.</span>
                            <div class="form-group required">
                                <label class="control-label  required" for="id_email">Email</label>
                                <div class="">
                                    <input class="form-control" id="id_email" maxlength="64" name="email" type="email" value="">
                                </div>
                            </div>
                            <span id="email" style="display: none;" class="help-block alert alert-danger ">Este campo es obligatorio.</span>
                            <div class="form-group has-feedback">
                                <label class="control-label" for="id_password1">
                                    Password
                                </label>
                                <div class="">
                                    <input class="form-control" id="id_password1" name="password1" type="password" />
                                    <span class="form-control-feedback fa fa-eye"></span>
                                </div>
                            </div>
                            <span id="password1" style="display: none;" class="help-block alert alert-danger ">Este campo es obligatorio.</span>
                            <div class="form-group has-feedback">
                                <label class="control-label" for="id_password2">Password (again)</label>
                                <div class="">
                                    <input class="form-control" id="id_password2" name="password2" type="password" />
                                    <span class="form-control-feedback fa fa-eye"></span>
                                </div>
                            </div>
                            <span id="password2" style="display: none;" class="help-block alert alert-danger ">Este campo es obligatorio.</span>
                            <div class="form-group">
                                <label class="control-label" for="id_description">Description</label>
                                <div class="">
                                    <textarea class="form-control" cols="40" id="id_description" name="description" value="" rows="4" style="overflow: hidden; word-wrap: break-word; height: 150px;"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="id_website">Website</label>
                                <div class="">
                                    <input class="form-control" id="id_website" name="website" type="url" value="">
                                </div>
                            </div>
                            <div class="form-group required">
                                <label class="control-label required" for="id_send_email">
                                    <a href="#" class="contextual-help" data-toggle="popover" data-placement="left" data-title="Send email" data-content="This will send an email to the user including the assigned password." data-original-title="" title="">
                                        <i class="fa fa-question-circle"></i>
                                    </a>
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" id="id_send_email" name="send_email" value="send_email">Send an email to the user 
                                        </label>
                                    </div>
                                </label>
                            </div>
                            <div class="form-group required">
                                <label class="control-label required" for="id_enabled">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" id="id_enabled" name="enable" value="enable">Enable 
                                        </label>
                                    </div>
                                </label>
                            </div>
                        </fieldset>
                    </div>
                </div>
                <div class="modal-footer">
                    <input class="btn btn-primary pull-right " type="submit" name="submit_permissions" value="Create">
                </div>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $('[data-toggle="popover"]').popover({html:true});
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>