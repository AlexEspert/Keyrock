<div id="edit_user_modal" class="modal fade" style="top: 0px;" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">Ã—</a>
                <h3>Edit user</h3>
            </div>
            <form id="edit_user_form" ng-controller="DummyCtrl" name="" autocomplete="" class="" action="" method="POST" enctype="">
                <input type='hidden' name='_csrf' value='<%= csrfToken%>' />
                <div class="modal-body clearfix">
                    <div class="left">
                        <fieldset>
                            <input id="id_userID" name="userID" type="hidden" value="">
                            <span id="emailUsed" class="help-block alert alert-danger" style="display: none;">Email is already used</span>
                            <span id="emailInvalid" class="help-block alert alert-danger" style="display: none;">Email is invalid</span>
                            <div class="form-group required">
                                <label class="control-label  required" for="id_username">Username</label>
                                <div class="">
                                    <input class="form-control" id="id_username" maxlength="64" name="user[username]" type="text" value="">
                                </div>
                            </div>
                            <span id="username" style="display: none;" class="help-block alert alert-danger ">Este campo es obligatorio.</span>
                            <div class="form-group required">
                                <label class="control-label  required" for="id_email">Email</label>
                                <div class="">
                                    <input class="form-control" id="id_email" maxlength="64" name="user[email]" type="text" value="">
                                </div>
                            </div>
                            <span id="email" style="display: none;" class="help-block alert alert-danger ">Este campo es obligatorio. </span>
                            <div class="form-group">
                                <label class="control-label" for="id_description">Description</label>
                                <div class="">
                                    <textarea class="form-control" cols="40" id="id_description" name="user[description]" value="" rows="4" style="overflow: hidden; word-wrap: break-word; height: 150px;">
                                    </textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="id_website">Website</label>
                                <div class="">
                                    <input class="form-control" id="id_website" name="user[website]" type="url" value="">
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
                <div class="modal-footer">
                    <input class="btn btn-primary pull-right " type="submit" name="submit_permissions" value="Save">
                </div>
            </form>
        </div>
    </div>
</div>